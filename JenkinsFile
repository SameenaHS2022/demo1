pipeline {
        agent any
        
        stages {
            
            stage(build) {
                steps{
                    sh "mvn clean install -DskipTests"
                }
            }
            stage(test) {
                steps{
                    sh "mvn test"
                    echo "hit"
                }
                post {
                    always {
                          junit "target/surefire-reports/*.xml"
                          archiveArtifacts 'target/*.jar'
                    }
                }
            }
        }
}
